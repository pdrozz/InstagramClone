<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">#FFFFFF</item>

    </style>

    <style name="BgButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@android:color/transparent</item>

    </style>

    <style name="BottomNav" parent="Widget.Design.BottomNavigationView">
        <item name="android:constantSize">true</item>
        <item name="android:showText">false</item>
        <item name="itemIconSize">20dp</item>
        <item name="labelVisibilityMode">unlabeled</item>
    </style>

</resources>
